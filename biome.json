{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "includes": ["**", "!src/bindings/generated.ts", "!src/routeTree.gen.ts"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 120,
        "lineEnding": "lf"
    },
    "overrides": [
        {
            "includes": [
                "src/translations/**"
            ],
            "formatter": {
                "lineWidth": 200
            },
            "javascript": {
                "formatter": {
                    "quoteProperties": "preserve"
                }
            }
        }
    ],
    "linter": {
        "rules": {
            "style": {
                "noNonNullAssertion": "warn"
            },
            "correctness": {
                "useExhaustiveDependencies": "warn"
            },
            "suspicious": {
                "noArrayIndexKey": "warn",
                "noExplicitAny": "warn",
                "noConfusingVoidType": "off"
            }
        }
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    }
}